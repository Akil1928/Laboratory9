<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="728.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TourController">

    <children>
        <BorderPane layoutY="142.4" prefHeight="586.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="142.0">

            <!-- Centro: Área para graficar árbol -->
            <center>
                <Pane fx:id="treePane" minHeight="554.0" prefHeight="558.0" prefWidth="579.0" style="-fx-background-color: lightgreen;" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </Pane>
            </center>
        </BorderPane>

           <!-- Título -->
           <Label fx:id="lblTourTitle" alignment="CENTER" text="Graphic Binary Tree - Transversal Tour" textFill="#d10808">
               <font>
                   <Font size="28.0" />
               </font>
           </Label>

           <!-- Subtítulo dinámico del tipo de recorrido -->
           <Label fx:id="lblSubTitle" alignment="CENTER" layoutY="34.0" text="Pre Order Transversal Tour (N-L-R)" textFill="#d10c0c">
               <font>
                   <Font size="16.0" />
               </font>
           </Label>
            <Button fx:id="btnRandomize" layoutX="17.0" layoutY="109.0" prefHeight="26.0" prefWidth="210.0" text="Randomize" />
            <Button fx:id="btnPreOrder" layoutX="338.0" layoutY="109.0" prefHeight="26.0" prefWidth="178.0" text="Pre Order" />
            <Button fx:id="btnInOrder" layoutX="338.0" layoutY="60.0" prefHeight="26.0" prefWidth="178.0" text="In Order" />
            <Button fx:id="btnPostOrder" layoutY="60.0" prefHeight="26.0" prefWidth="258.0" text="Post Order" />
    </children>
</AnchorPane>
